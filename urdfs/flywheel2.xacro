<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" name="solo">

    <!-- Things that are needed only for Gazebo (not the physical robot). These include sensor and controller plugin specifications -->
    <xacro:macro name="flywheel_train" params="radius height mass inertia_z inertia_xy angle">

        <xacro:include filename="$(find solo_description)/urdfs/flywheel2.transmission.xacro"/>
        <xacro:include filename="$(find solo_description)/urdfs/flywheel2.gazebo.xacro"/>



        <joint name="z_left_wheel_joint" type="revolute">
            <parent link="trunk"/>
            <child link="left_wheel"/>
            <origin rpy="-1.57 0 -${angle}" xyz="${-0.025 +0.025*cos(angle) +0.02*sin(angle)} ${+0.047 -0.025*sin(angle) +0.02*cos(angle)} 0.066"/>
            <axis xyz="0 0 1"/>
            <dynamics damping="0.0" friction="0.0"/>
            <limit effort="0.225" lower="-1e06" upper="1e06" velocity="523"/>
            <!--limit effort="0.675" lower="-1e06" upper="1e06" velocity="4000"/-->
        </joint>

        <link name="left_wheel">
            <inertial>
                <mass value="${mass}"/>
                <inertia ixx="${inertia_xy}" ixy="0"              ixz="0" 
                                             iyy="${inertia_xy}"  iyz="0" 
                                                                  izz="${inertia_z}"/>
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0.0"/>
                <geometry>
                    <mesh scale="0.001 0.001 0.001" filename="package://solo_description/meshes/stl/flywheel/flywheel.stl"/>
                </geometry>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0.0"/>
                <geometry>
                    <mesh scale="0.001 0.001 0.001" filename="package://solo_description/meshes/stl/flywheel/flywheel.stl"/>
                </geometry>
            </collision>    
        </link>

        <joint name="z_right_wheel_joint" type="revolute">
            <parent link="trunk"/>
            <child link="right_wheel"/>
            <origin rpy="1.57 0 ${angle}" xyz="${-0.025 +0.025*cos(angle)+0.02*sin(angle)} ${-0.047 +0.025*sin(angle) -0.02*cos(angle)} 0.066"/>
            <axis xyz="0 0 1"/>
            <dynamics damping="0.0" friction="0.0"/>
            <limit effort="0.225" lower="-1e06" upper="1e06" velocity="523"/>
            <!--limit effort="0.675" lower="-1e06" upper="1e06" velocity="4000"/-->
        </joint>

        <link name="right_wheel">
            <inertial>
                <mass value="${mass}"/>
                <inertia ixx="${inertia_xy}" ixy="0"              ixz="0" 
                                             iyy="${inertia_xy}"  iyz="0" 
                                                                  izz="${inertia_z}"/>
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0.0"/>
                <geometry>
                    <mesh scale="0.001 0.001 0.001" filename="package://solo_description/meshes/stl/flywheel/flywheel.stl"/>
                </geometry>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0.0"/>
                <geometry>
                    <mesh scale="0.001 0.001 0.001" filename="package://solo_description/meshes/stl/flywheel/flywheel.stl"/>
                </geometry>
            </collision>
        </link>

        <xacro:flywheel_transmission/>
        <xacro:flywheel_gazebo/>

    </xacro:macro>
</robot>
